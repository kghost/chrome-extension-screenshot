{
	"name": "Screenshot Extension",
	"version": "1.0",
	"description": "Copy tab content to clipboard",
	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_icon": "camera.png",
		"default_title": "Copy tab content to clipboard"
	},
	"permissions": [
		"activeTab",
		"clipboardWrite",
		"notifications"
	],
	"manifest_version": 2
}
